<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Countdown to October 9, 2025</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 50px;
      font-size: 2em;
    }
    #countdown {
      color: #333;
    }
  </style>
</head>
<body>

  <div id="countdown">Loading countdown...</div>

  <script>
    // Set target date: October 9, 2025, 9:00 AM local time
    const targetDate = new Date("October 9, 2025 09:00:00").getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance <= 0) {
        document.getElementById("countdown").innerHTML = "The event has started!";
        clearInterval(countdownInterval);
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));

      document.getElementById("countdown").innerHTML =
        `${days} days, ${hours} hours, ${minutes} minutes`;
    }

    updateCountdown(); // Initial call
    const countdownInterval = setInterval(updateCountdown, 1000 * 60); // Update every minute
  </script>

</body>
</html>
